<h1 class ="title">
  Update Profile
</h1>     
<div class="wrapper">
  <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
            id: "loginform", class: "form-horizontal", role: "form")  do |f| %>
      <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-hand-right"></i>
        </span>
        <%= f.text_field :first_name, autofocus: true, id: "login-username",
        class: "form-control",  placeholder: "Enter First name"  %> 
      </div> 

      <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-hand-right"></i>
        </span>
        <%= f.text_field :last_name, id: "login-username",
        class: "form-control",  placeholder: "Enter Last name"  %> 
      </div> 

      <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-user"></i>
        </span>
        <%= f.email_field :email,
        class: "form-control",  placeholder: "Enter email"  %> 
      </div>   

      <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-phone"></i>
        </span>
        <%= f.text_field :mobile_no,  id: "login-username",
        class: "form-control",  placeholder: "Enter mobile no"  %> 
      </div>
      <div class ="text-center"> 
        <%= f.submit "Update Profile", class: "btn btn-primary" %>
      </div>
    <% end %>    
  </div>                     
</div>
